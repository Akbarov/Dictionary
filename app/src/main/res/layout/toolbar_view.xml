<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:contentInsetEnd="2dp"
        android:contentInsetLeft="2dp"
        android:contentInsetRight="2dp"
        android:contentInsetStart="2dp"
        app:contentInsetEnd="2dp"
        app:contentInsetLeft="2dp"
        app:contentInsetRight="2dp"
        app:contentInsetStart="2dp"
        app:theme="@style/ThemeOverlay.AppCompat"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dictionary"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:clickable="true"
                android:src="@drawable/ic_star_24dp"
                android:tint="@android:color/white" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_history_24dp"
                android:clickable="true"
                android:tint="@android:color/white" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>